<div id="main-nav"></div><br/>

<div class="img-responsive">
  <a href="/todos/edit/{{doc.uuid}}"><button type="button" class="btn btn-info btn-lg">
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  &nbsp; Edit This Todo
  </button></a>

<br/><br/><br/>

<div class="panel panel-default table-responsive">
  <div class="panel-heading">
  <a href="/todos/edit/{{doc.uuid}}" class="left list-group-item active justify-content-between">
  &nbsp; Title: &nbsp;  {{doc.title}}
  </a>
</div>
<div style="text-align:center;" class="panel-body">
  <a href="/todos/update/{{doc.uuid}}">
    <a class="list-group-item" href="/todos/{{doc.uuid}}" style="background-color:#f9f9f9;"><span class="label label-danger">Priority: {{doc.priority}}</span></a>
    <a class="list-group-item" href="/todos/edit/{{doc.uuid}}">Description: {{doc.description}}</a>
    <a class="list-group-item" href="/todos/edit/{{doc.uuid}}">Date: {{doc.date}}</a>
    <a class="list-group-item" href="/todos/{{uuid}}">
      {{#if displayAM}}
        <img src="/images/glyphicons-232-sun.png" class="am-glyph" />
      {{else}}
        <img src="/images/glyphicons-231-moon.png" class="am-glyph" />
      {{/if}}
      &nbsp;
      Updated: {{doc.time}} PST
    </a>

    {{#if doc.inProgress}}
        <a class="list-group-item list-group-item-success" href="/todos/edit/{{doc.uuid}}">In Progress</a>
    {{else}}
        <a class="list-group-item list-group-item-warning" href="/todos/edit/{{doc.uuid}}">Not In Progress</a>
    {{/if}}

  </div></div>
</div></div>
<br/>

<div class="w3-container">
  <a href="/todos/new"><button type="button" name="button" class="w3-button w3-large w3-circle w3-red w3-card-4">+</button></a>
  &nbsp; &nbsp;
  <a href="/todos/delete/{{doc.uuid}}"> <button class="w3-button w3-large w3-circle w3-teal">â€“</button></a>
</div>
<br/><br/><br/>

<script>
document.addEventListener('DOMContentLoaded', function navLaunch() {
var is_safari = navigator.vendor && navigator.vendor.indexOf('Apple') > -1 &&
               navigator.userAgent && !navigator.userAgent.match('CriOS');
if(!is_safari) {
  navBar = "<nav class='navbar navbar-inverse navbar-fixed-top'> <div class='navbar-header-double'> <a href='/todos'><button type='button' class='btn navbar-btn pull-left top-btn'> <span class='glyphicon glyphicon-chevron-left remove' style='color:black;'></span> </button></a> <h1 class='nowrap title'> &nbsp; &nbsp; {{title}}</h1> </div> </nav><br/>";
  document.querySelector('#main-nav').innerHTML = navBar;
} else {
  navBar = "<div class='min-standard'> <nav class='navbar navbar-inverse navbar-fixed-top'> <div class='navbar-header' style='float:center;'> <a href='/todos'><button type='button' class='btn navbar-btn'> <span class='glyphicon glyphicon-chevron-left' style='color:black;margin-right:5px;'></span> </button></a> </div></nav><br/>"
  document.querySelector('#main-nav').innerHTML = navBar;
}});
</script>

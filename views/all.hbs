  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Create New Todo
</button></a>

<br/><br/><br/>

{{#each todos}}

<div class="panel panel-default">
  <div class="panel-heading">
  <a href="/todos/{{uuid}}" class="left list-group-item active justify-content-between">
    {{title}} <span class="badge badge-info badge-pill">Priority: {{priority}}</span>
  </a>
</div>

  <div style="text-align:center;" class="panel-body">
    <a class="list-group-item">Description: {{description}}</a>
    <!-- <a class="list-group-item">Completed : {{done}}</a> -->
    <a class="list-group-item">Date: {{date}}</a>
    <a class="list-group-item">Time: {{time}}</a>
  </a>

  {{#if inProgress}}
      <a class="list-group-item list-group-item-success">In Progress</a>
  {{else}}
      <a class="list-group-item list-group-item-warning">Not In Progress</a>
  {{/if}}
  </div>
</div>

{{/each}}

<br/>

<div class="w3-container">
  <a href="/todos/new"><button type="button" name="button" class="w3-button w3-large w3-circle w3-red w3-card-4">+</button></a>
</div>


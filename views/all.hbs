{{#each todos}}

<div class="panel panel-default table-responsive">
  <div class="panel-heading">
  <a href="/todos/{{uuid}}" class="left list-group-item active">
  &nbsp; Title: &nbsp;  {{title}}
  </a>
</div>

  <div style="text-align:center;" class="panel-body">
    <a class="list-group-item" href="/todos/{{uuid}}" style="background-color:#f9f9f9;"><span class="label label-danger">Priority: {{priority}}</span></a>
    <a class="list-group-item" href="/todos/{{uuid}}">Description: {{description}}</a>
    <!-- <a class="list-group-item">Completed : {{done}}</a> -->
    <a class="list-group-item" href="/todos/{{uuid}}">Date: {{date}}</a>
    <a class="list-group-item" href="/todos/{{uuid}}">Time: {{time}} PST</a>
  </a>


  {{#if inProgress}}
      <a class="list-group-item list-group-item-success" href="/todos/{{uuid}}">In Progress</a>
  {{else}}
      <a class="list-group-item list-group-item-warning" href="/todos/{{uuid}}">Not In Progress</a>
  {{/if}}

  </div>
</div>

{{/each}}

<br/>

<div class="w3-container">
  <a href="/todos/new"><button name="button" class="w3-button w3-large w3-circle w3-red w3-card-4">+</button></a>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header-double">
      <a href="/"><button type="button" class="btn navbar-btn pull-left top-btn">
        <span class="glyphicon glyphicon-chevron-left remove gly-btn" style="color:black;"></span>
      </button></a>
      <h1 class="nowrap title"> &nbsp; &nbsp; {{title}}</h1>
    </div>
</nav><br/><br/>

  <a href="/todos/compressedtodos"><button type="button" class="btn btn-danger btn-lg">
    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> &nbsp; Compact View
  </button></a>

  &nbsp; &nbsp;

  <a href="/todos/new"><button type="button" class="btn btn-success btn-lg">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp; Create New Todo
  </button></a>

<br/><br/><br/>

{{#each todos}}

<div class="panel panel-default table-responsive shadow todos-all">
  <div class="panel-heading">
  <a href="/todos/{{uuid}}" class="left list-group-item active">
  &nbsp; Title: &nbsp;  {{title}}
  </a>
</div>

  <div style="text-align:center;" class="panel-body">
    <a class="list-group-item" href="/todos/{{uuid}}" style="background-color:#f9f9f9;"><span class="label label-danger">Priority: {{priority}}</span></a>
    <a class="list-group-item" href="/todos/{{uuid}}">Description: {{description}}</a>
    <a class="list-group-item" href="/todos/{{uuid}}">Date: {{date}}</a>
    <a class="list-group-item" href="/todos/{{uuid}}">
      {{#if displayAM}}
        <img src="/images/glyphicons-232-sun.png" class="am-glyph" />
      {{else}}
        <img src="/images/glyphicons-231-moon.png" class="am-glyph" />
      {{/if}}
      &nbsp;
      Updated: {{time}} PST
    </a>

  {{#if inProgress}}
      <a class="list-group-item list-group-item-success" href="/todos/{{uuid}}">In Progress</a>
  {{else}}
      <a class="list-group-item list-group-item-warning" href="/todos/{{uuid}}">Not In Progress</a>
  {{/if}}

  </div>
</div>

{{/each}}

<div class="w3-container">
  <a href="/todos/new"><button name="button" class="w3-button w3-large w3-circle w3-red w3-card-4">+</button></a>
</div>


<div id="main-nav"></div><br/><br/>

    <div class="row col-12 col-xs-12 col-md-12 col-xl-12 col-lg-12 back-and-forth">
      <a href="/signup" class="nowrap btn-hidden" style="color:#2970e5;">Don't Have An Account? Sign Up</a>
    </div>

        {{#if message}}
          <div class="alert alert-danger edit-default">{{message}}</div><br/>
        {{/if}}

    <div>
      <div class="jumbotron text-center">

        <form action="/login" method="post" class="form top-offset">

           <h1><span class="right-adjust"></span>Login</h1><br/><br/>

          <div class="form-group neg-margin">
              <label class="edit-default">Email :</label>
              <input type="email" class="form-control option-md" name="email" required>
          </div>

          <div class="form-group">
            <label class="edit-default">Password :</label>
            <input type="password" class="form-control option-md" name="password" required />
          </div>

          <div class="form-group center-all">
            <button type="submit" value="Submit" class="btn btn-success btn-lg msg-submit">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span> &nbsp; Login &nbsp;
            </button>
          </div>

      <small id="loginHelp" class="form-text" style="font-size:10px;">If you forgot your password, please <a href="todos/contact/form">contact us.</a></small>

      </form>
    </div>
  </div>

  <div id="back-opt"></div>

  <script>
  document.addEventListener('DOMContentLoaded', function navLaunch() {
  var is_safari = navigator.vendor && navigator.vendor.indexOf('Apple') > -1 &&
                 navigator.userAgent && !navigator.userAgent.match('CriOS');
  if(!is_safari) {
    navBar = "<nav class='navbar navbar-inverse navbar-fixed-top'> <div class='navbar-header-double'> <a href='/signup'><button type='button' class='btn navbar-btn pull-left top-btn'> <span class='glyphicon glyphicon-chevron-left remove' style='color:black;'></span> </button></a> <h1 class='nowrap title'> &nbsp; &nbsp; {{title}}</h1> </div> </nav>";
    document.querySelector('#main-nav').innerHTML = navBar;
  } else {
    navBar = "<div class='min-standard'> <nav class='navbar navbar-inverse navbar-fixed-top'> <div class='navbar-header' style='float:center;'> <a href='/signup'><button type='button' class='btn navbar-btn'> <span class='glyphicon glyphicon-chevron-left' style='color:black;margin-right:5px;'></span> </button></a> </div></nav><br/>"
    document.querySelector('#main-nav').innerHTML = navBar;
  }});
  </script>
